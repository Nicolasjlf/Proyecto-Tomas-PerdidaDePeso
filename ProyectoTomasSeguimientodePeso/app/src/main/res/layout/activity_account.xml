<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity">
    
    <ImageView
        android:layout_marginBottom="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagenusuario"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/activityAcount_mailUser"
        android:textSize="30dp"
        android:text="Mail: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/activityAcount_nombreUser"
        android:textSize="30dp"
        android:text="Nombre: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/activityAcount_AlturaUser"
        android:textSize="30dp"
        android:text="Altura: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/activityAcount_pesoActualUser"
        android:textSize="30dp"
        android:text="Peso: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/activityAcount_pesoObjetivoUser"
        android:textSize="30dp"
        android:text="Peso Objetivo: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/verde"
        android:text="Edit Objectives"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
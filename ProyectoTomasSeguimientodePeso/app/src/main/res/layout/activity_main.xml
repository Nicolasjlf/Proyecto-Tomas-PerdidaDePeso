<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingBottom="30dp"
    android:weightSum="3"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HOME"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4">

        <Button
            android:id="@+id/mainActivity_myAcount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_account_circle_black_100dp"
            android:paddingTop="30dp"
            android:text="My account" />

        <Button
            android:id="@+id/mainActivity_histoy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/verde"
            android:drawableTop="@drawable/ic_history_black_100dp"
            android:paddingTop="30dp"
            android:text="history" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4">

        <Button
            android:id="@+id/mainActivity_myPics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/dorado"
            android:drawableTop="@drawable/ic_photo_camera_black_100dp"
            android:paddingTop="30dp"
            android:text="my pics" />

        <Button
            android:id="@+id/mainActivity_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:drawableTop="@drawable/ic_settings_black_100dp"
            android:paddingTop="30dp"
            android:text="settings" />


    </LinearLayout>

</LinearLayout>